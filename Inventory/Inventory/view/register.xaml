<Window x:Class="Inventory.view.register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventory.view"
        mc:Ignorable="d"
        Title="register" Height="450" Width="800">
    <Grid Background="#FF47BFC5">
        <Label Content="Register" HorizontalAlignment="Left" Margin="358,40,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" Height="32" Width="73" FontSize="16"/>
        <Canvas HorizontalAlignment="Left" Height="508" Margin="10,-55,0,-34" VerticalAlignment="Top" Width="715">
            <Canvas.Background>
                <ImageBrush ImageSource="I (4).png"/>
            </Canvas.Background>
            <Label Content="Let's start with your name" Canvas.Left="272" Canvas.Top="153" Background="{x:Null}" Foreground="#FF47BFC5"/>
            <TextBox x:Name="txtnameregister" Height="28" Canvas.Left="262" TextWrapping="Wrap" Text="Please enter your name" Canvas.Top="184" Width="166" Background="#FF47BFC5" Foreground="White" BorderBrush="{x:Null}"/>
            <Label Content="Already Done ? Let's Go" Canvas.Left="272" Canvas.Top="227" Foreground="#FF47BFC5"/>
            <Button x:Name="btnLetsGo" Content="Let's Go" Height="29" Canvas.Left="262" Canvas.Top="258" Width="166" Click="Button_Click" Background="#FF47BFC5" BorderBrush="{x:Null}" Foreground="White"/>
        </Canvas>
    </Grid>
</Window>
